features:

  "Piece_Unity":
    serviceHooks:
      "rootPlugin":
        =>: "Piece_Unity_Plugin_Root"

  "Piece_Unity_Plugin_Root":
    serviceHooks:
      "configurator":
        =>: "Piece_Unity_Plugin_ConfiguratorChain"
      "outputFilter":
        =>: "Piece_Unity_Plugin_OutputBufferStack"
      "interceptor":
        =>: "Piece_Unity_Plugin_InterceptorChain"
      "controller":
        =>: "Piece_Unity_Plugin_Controller"

  "Piece_Unity_Plugin_ConfiguratorChain":
    serviceHooks:
      "requiredConfigurators":
        =>:
          - "Piece_Unity_Plugin_Configurator_AppRoot"
          - "Piece_Unity_Plugin_Configurator_Env"
          - "Piece_Unity_Plugin_Configurator_Event"
          - "Piece_Unity_Plugin_Configurator_Proxy"
          - "Piece_Unity_Plugin_Configurator_Request"
          - "Piece_Unity_Plugin_Configurator_Validation"
        isMultiple:
      "configurators":
        isOptional:
        isMultiple:

  "Piece_Unity_Plugin_Configurator_AppRoot":
    valueHooks:
      "appRoot":
        isOptional:
      "appRootPath":
        isOptional:

  "Piece_Unity_Plugin_Configurator_Env":
    serviceHooks:
      "envHandlers":
        =>:
          - "Piece_Unity_Plugin_Configurator_EnvHandler_PieceFlow"
          - "Piece_Unity_Plugin_Configurator_EnvHandler_PieceRight"
        isMultiple:
    valueHooks:
      "proxyPath":
        isOptional:

  "Piece_Unity_Plugin_Configurator_Event":
    valueHooks:
      "eventNameKey":
        =>: "_event"
        isOptional:
      "eventName":
        isOptional:

  "Piece_Unity_Plugin_Configurator_Proxy":
    valueHooks:
      "proxyPath":
        isOptional:
      "adjustSessionCookiePath":
        =>: true

  "Piece_Unity_Plugin_Configurator_Request":
    valueHooks:
      "importPathInfo":
        =>: false

  "Piece_Unity_Plugin_Configurator_Validation":
    valueHooks:
      "configDirectory":
        isOptional:
      "cacheDirectory":
        isOptional:
      "validatorDirectories":
        isOptional:
        isMultiple:
      "filterDirectories":
        isOptional:
        isMultiple:
      "validatorPrefixes":
        isOptional:
        isMultiple:
      "filterPrefixes":
        isOptional:
        isMultiple:
      "template":
        isOptional:
      "useUnderscoreAsDirectorySeparator":
        =>: false

  "Piece_Unity_Plugin_OutputBufferStack":
    serviceHooks:
      "filters":
        isOptional:
        isMultiple:

  "Piece_Unity_Plugin_InterceptorChain":
    serviceHooks:
      "interceptors":
        =>:
         - "Piece_Unity_Plugin_Interceptor_Session"
        isOptional:
        isMultiple:

  "Piece_Unity_Plugin_Interceptor_Session":
    valueHooks:
      "enableExpiration":
        =>: false
      "expirationTime":
        =>: 1440
      "expirationFallbackURI":
        isOptional:

  "Piece_Unity_Plugin_Controller":
    serviceHooks:
      "dispatcher":
        =>: "Piece_Unity_Plugin_Dispatcher_Continuation"
      "continuation":
        =>: "Piece_Unity_Plugin_Dispatcher_Continuation"
      "view":
        =>: "Piece_Unity_Plugin_View"

  "Piece_Unity_Plugin_Dispatcher_Continuation":
    valueHooks:
      "actionDirectory":
      "cacheDirectory":
      "flowExecutionTicketKey":
        =>: "_flowExecutionTicket"
      "bindActionsWithFlowExecution":
        =>: true
      "enableGC":
        =>: false
      "gcExpirationTime":
        =>: 1440
      "useGCFallback":
        =>: false
      "flowMappings":
        isOptional:
      "configDirectory":
      "configExtension":
        =>: ".flow"
      "useFullFlowNameAsViewPrefix":
        =>: true
      "gcFallbackURI":
        isOptional:

  "Piece_Unity_Plugin_Dispatcher_Simple":
    valueHooks:
      "actionDirectory":
        isOptional:
      "useDefaultEvent":
        =>: false
      "defaultEventName":
        isOptional:

  "Piece_Unity_Plugin_View":
    serviceHooks:
      "renderer":               # deprecated
        isOptional:
      "viewSchemeHandler":
        =>: "Piece_Unity_Plugin_ViewSchemeHandler"
    valueHooks:
      "forcedView":
        isOptional:

  "Piece_Unity_Plugin_ViewSchemeHandler":
    valueHooks:
      "html":
        =>: "Piece_Unity_Plugin_Renderer_PHP"
      "http":
        =>: "Piece_Unity_Plugin_Renderer_Redirection"
      "https":
        =>: "Piece_Unity_Plugin_Renderer_Redirection"
      "self":
        =>: "Piece_Unity_Plugin_Renderer_Redirection"
      "selfs":
        =>: "Piece_Unity_Plugin_Renderer_Redirection"
      "json":
        =>: "Piece_Unity_Plugin_Renderer_JSON"
      "raw":
        =>: "Piece_Unity_Plugin_Renderer_Raw"

  "Piece_Unity_Plugin_Renderer_PHP":
    serviceHooks:
      "components":
        isOptional:
        isMultiple:
    valueHooks:
      "useLayout":
        =>: false
      "layoutView":
        isOptional:
      "layoutDirectory":
        isOptional:
      "layoutCompileDirectory":
        isOptional:
      "turnOffLayoutByHTTPAccept":
        =>: false
      "useFallback":
        =>: false
      "fallbackView":
        isOptional:
      "fallbackDirectory":
        isOptional:
      "fallbackCompileDirectory":
        isOptional:
      "templateDirectory":
      "templateExtension":
        =>: ".php"

  "Piece_Unity_Plugin_Renderer_Raw":

  "Piece_Unity_Plugin_Renderer_Redirection":
    valueHooks:
      "addSessionID":
        =>: false
      "isExternal":
        =>: false
      "addFlowExecutionTicket":
        =>: false

# Local Variables:
# mode: conf-colon
# coding: iso-8859-1
# tab-width: 2
# indent-tabs-mode: nil
# End:
